<odoo>

    <!-- Add "Account Type" to partner form -->
    <record id="partner_sale_invoice_type_partner_form_view" model="ir.ui.view">
        <field name="name">mylva.account.partner.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="invoice_type" widget="selection" attrs="{'invisible':[('customer','=',False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
