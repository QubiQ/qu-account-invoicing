<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='clearfix']" position="after">
            <div t-if="o.move_id">
                <h4><strong>Payments</strong></h4>
                <table class="table table-condensed" name="payments_table" style="width: 400px;">
                    <thead>
                        <tr>
                            <th>Due Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="o._get_payments()" t-as="payment">
                            <td><span t-field="payment.date_maturity"/></td>
                            <td><span t-field="payment.debit"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>