<odoo>
    <record id="res_view_partner_property_form" model="ir.ui.view">
        <field name="name">res.view.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <group name="sale" position="inside">
                <field name="analytic_account_sales" options="{'no_create': True}"/>
            </group>
            <group name="purchase" position="inside">
                <field name="analytic_account_purchases" options="{'no_create': True}"/>
            </group>
        </field>
    </record>
</odoo>